{% extends 'base.html.twig' %}

{% block title %}Brands
{% endblock %}

{% block body %}
	<div class="bg-white shadow-md rounded-lg p-6">
		<h1 class="text-3xl font-bold mb-4">Brands</h1>
		<p class="mb-6">
			Manage your brands here. You can create new brands, view details of existing ones, and manage their loyalty cards.
		</p>
		<div class="flex justify-end mb-4">
			<a href="{{ path('app_create_brand') }}" class="btn btn-primary">Add New Brand</a>
		</div>
		<div class="grid grid-cols-1 md:grid-cols-3 gap-4">
			{% for brand in brands %}
				<div class="card bg-blue-50 border border-blue-200 rounded-lg p-4">
					<div class="card-body">
						<h2 class="card-title">{{ brand.name }}</h2>
						<p class="mb-4">Number of Loyalty Cards:
							{{ brand.loyaltyCards|length }}</p>
						<a href="{{ path('app_brand', {'id': brand.id}) }}" class="link link-primary">View Details</a>
					</div>
				</div>
			{% else %}
				<p>No brands found.</p>
			{% endfor %}
		</div>
	</div>
{% endblock %}
